{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Syronius FRAME stack-config.json (V1.1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "mode",
    "capabilities",
    "routes",
    "public_route_prefixes"
  ],
  "properties": {
    "mode": {
      "type": "string",
      "enum": [
        "LAN",
        "HYBRID"
      ]
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "frame-video-relay",
        "frame-audio-relay",
        "frame-photo-gallery",
        "frame-photo-ftp",
        "frame-photo-webupload",
        "frame-photo-discord",
        "frame-photo-todaytools",
        "frame-overlays"
      ],
      "properties": {
        "frame-video-relay": {
          "type": "boolean"
        },
        "frame-audio-relay": {
          "type": "boolean"
        },
        "frame-photo-gallery": {
          "type": "boolean"
        },
        "frame-photo-ftp": {
          "type": "boolean"
        },
        "frame-photo-webupload": {
          "type": "boolean"
        },
        "frame-photo-discord": {
          "type": "boolean"
        },
        "frame-photo-todaytools": {
          "type": "boolean"
        },
        "frame-overlays": {
          "type": "boolean"
        }
      }
    },
    "routes": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dashboard",
        "status",
        "video_relay_ui",
        "overlays_root",
        "overlays_wizard",
        "photo_gallery",
        "today_gallery",
        "today_viewer",
        "today_remote",
        "audio_admin",
        "audio_capture",
        "audio_listen",
        "audio_hls"
      ],
      "properties": {
        "dashboard": {
          "type": "string",
          "pattern": "^/"
        },
        "status": {
          "type": "string",
          "pattern": "^/"
        },
        "video_relay_ui": {
          "type": "string",
          "pattern": "^/"
        },
        "overlays_root": {
          "type": "string",
          "pattern": "^/"
        },
        "overlays_wizard": {
          "type": "string",
          "pattern": "^/"
        },
        "photo_gallery": {
          "type": "string",
          "pattern": "^/"
        },
        "today_gallery": {
          "type": "string",
          "pattern": "^/"
        },
        "today_viewer": {
          "type": "string",
          "pattern": "^/"
        },
        "today_remote": {
          "type": "string",
          "pattern": "^/"
        },
        "audio_admin": {
          "type": "string",
          "pattern": "^/"
        },
        "audio_capture": {
          "type": "string",
          "pattern": "^/"
        },
        "audio_listen": {
          "type": "string",
          "pattern": "^/"
        },
        "audio_hls": {
          "type": "string",
          "pattern": "^/"
        }
      }
    },
    "public_route_prefixes": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^/"
      }
    }
  }
}